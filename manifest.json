{
  "manifest_version": 2,
  "name": "Azure DevOps Auto Theme",
  "description": "A browser extension to automatically switch Azure DevOps theme.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://*.visualstudio.com/*"
      ],
      "js": [
        "/src/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "/src/inject.js"
  ]
}